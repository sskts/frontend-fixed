<div class="purchase-complete">
    <h1 class="page-ttl"><%- __('purchase.complete.page_ttl') %></h1>
    <p class="read"><%- __('purchase.complete.read') %></p>

    <ul class="box radius bg-light-gray info mb-large form-layout">
        <li class="purchase-number">
            <dl>
                <dt><%- __('common.purchase_number') %></dt>
                <dd>
                    <strong class="red-text large-x-text"><%= purchaseModel.seatReservationAuthorization.result.updTmpReserveSeatResult.tmpReserveNum %></strong>
                    <p class="small-x-text"><%- __('purchase.complete.reserve_read') %></p>
                </dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.theater') %> / <%- __('common.screen') %></dt>
                <dd><%= purchaseModel.individualScreeningEvent.superEvent.location.name.ja %> / <%= purchaseModel.individualScreeningEvent.location.name.ja %></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.film_title') %></dt>
                <dd><%= purchaseModel.individualScreeningEvent.workPerformed.name %></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.appreciation_date') %></dt>
                <dd>
                        <%= moment(purchaseModel.individualScreeningEvent.coaInfo.dateJouei).format('YYYY年MM月DD日') %>(<%= __('week[' + moment(purchaseModel.individualScreeningEvent.coaInfo.dateJouei).format('ddd') + ']') %>) <%= timeFormat(purchaseModel.individualScreeningEvent.startDate, purchaseModel.individualScreeningEvent.coaInfo.dateJouei) %> - <%= timeFormat(purchaseModel.individualScreeningEvent.endDate, purchaseModel.individualScreeningEvent.coaInfo.dateJouei) %>
                </dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.seat') %></dt>
                <dd>
                    <% for (ticket of purchaseModel.reserveTickets) { %>
                    <p><%= `${ticket.seatCode} ${ticket.ticketName} ￥${formatPrice(ticket.salePrice)}` %></p>
                    <% } %>
                </dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.amount_spent') %></dt>
                <dd>￥<%= formatPrice(purchaseModel.getReserveAmount()) %></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.mail_addr') %></dt>
                <dd><%= purchaseModel.profile.email %></dd>
            </dl>
        </li>
    </ul>

    <% if (viewType === 'app') { %>    
    <dl class="box radius bg-light-gray mb-middle">
        <dt class="mb-small text-center">
            <strong><%- __('purchase.complete.ticket_holder.title') %></strong>
        </dt>
        <dd>
            <div class="image mb-x-small bg-white"><img src="/images/default/purchase/complete/qr.svg" alt=""></div>
            <p><%- __('purchase.complete.ticket_holder.read') %></p>
        </dd>
    </dl>
    <div class="button blue-button center-button">
        <a href="<%- appSiteUrl %>/#/ticket"><%= __('common.close') %></a>
    </div>
    <% } else { %>
    <div class="mb-x-large">
        <p class="mb-middle small-x-text"><%- __('purchase.complete.print_read') %></p>
        <div class="button dark-blue-button print-button center-button not-print">
            <a class="icon-print-white" href="#"><%- __('purchase.complete.print') %></a>
        </div>
    </div>

    <div class="not-print">
        <h2 class="page-ttl"><%- __('purchase.complete.entry') %></h2>

        <ul class="entry-method">
            <li>
                <dl class="box radius bg-light-gray">
                    <dt class="mb-x-small text-center">
                        <strong><%- __('purchase.complete.entry_title') %></strong>
                    </dt>
                    <dd>
                        <p class="mb-small"><%- __('purchase.complete.entry_read_01') %></p>
                        <div class="image mb-x-small"><img src="/images/default/purchase/complete/qr.svg" alt=""></div>
                        <div class="button blue-button inquiry-button mb-small center-button">
                            <a class="icon-new-tab-white" href="/inquiry/login?theater=<%= purchaseModel.individualScreeningEvent.coaInfo.theaterCode %>&reserve=<%= purchaseModel.seatReservationAuthorization.result.updTmpReserveSeatResult.tmpReserveNum %>" target="_blank"><%- __('purchase.complete.entry_button') %></a>
                        </div>
                        <p><%- __('purchase.complete.entry_read_02') %></p>
                    </dd>
                </dl>
            </li>
        </ul>

        <div class="button-area clearfix">
            <div class="prev-link"><a class="icon-prev-black"href="<%= portalSite %>"><%- __('purchase.complete.prev') %></a></div>
        </div>
    </div>
    <% } %>    
</div>